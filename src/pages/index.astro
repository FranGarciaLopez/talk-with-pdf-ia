---
import Layout from "../layouts/Layout.astro";
import App from "../components/App.svelte";
---

<Layout title="Chat with openAI">
	<div
		class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
	>
	</div>
	<main class="grid place-content-center min-h-screen w-screen text-white">
		<div
			class="flex flex-col items-center justify-center w-full max-w-2xl p-4 space-y-4"
		>
			<h1 class="text-4xl font-bold text-center">
				Chat with openAI API
			</h1>
		</div>
		<section class="container w-max-[1000px] max-w-xl h-64">
			<App client:idle />
		</section>
	</main>
</Layout>

